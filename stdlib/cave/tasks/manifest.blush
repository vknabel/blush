module tasks

// Marks a data declaration as a task.
// The task can be executed from the command line.
// Exactly one of these two annotations are required: @RunFile, @Run or @Import.
enum Task {
  Exec
  Call
  Import
}

// Indicates that this task is implemented in an external file.
annotation Exec {
  // The file that contains the implementation of the task.
  @String file
}

// Indicates that this task is implemented by a function.
annotation Call {
  // The function to run for the task.
  @Function function
}

// Indicates that this task uses a module for its implementation.
// Must be declared on the field of a data declaration with @Dependencies.
annotation Import {
  // The module to use for the task.
  @Module module
}

// Renames the task, flag or argument.
annotation Name {
  // The new name.
  @String name
}

// Provides alternative names for the task, flag or argument.
annotation Alias {
  // A alternative names.
  @Array alias
}

// Provides a short name for the flag.
// Not applicable to arguments.
annotation Short {
  // The short name of the flag.
  @Char short
}

// A short help text for the task, flag or argument.
annotation Help {
  // A short help text.
  @String help
}

// Marks this field as a commandline flag.
annotation Flag {}

// Marks this field as a positional commandline argument.
annotation Arg {}
