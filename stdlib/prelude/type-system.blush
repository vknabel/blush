module prelude

extern Any {}
extern AnyType {}
extern EnumType {}
extern DataType {}
extern AnnotationType {}
extern ModuleType {}

extern Void {}

// Annotates a declaration to be of a given type.
// Instead of annotating declarations with `@Type(SomeType)`, the shorthand of `@SomeType` can be used.
annotation Type {
  // The type of the annotation.
  @Type(AnyType) type
}

annotation Has {
  @Type(AnnotationType)
  type
}

annotation Returns {
  @Type(AnyType)
  type
}
